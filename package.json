{
  "name": "@oddo/monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Oddo monorepo containing UI and Language packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:ui": "npm run build --workspace=@oddo/ui",
    "build:lang": "npm run build --workspace=@oddo/lang",
    "build:docs": "npm run build --workspace=@oddo/docs",
    "dev": "npm run build:ui && npm run playground",
    "docs:serve": "node packages/docs/server.mjs",
    "docs:dev": "npm run build:docs && npm run docs:serve",
    "demo:lang": "nodemon packages/lang/src/web-demo.mjs"
  },
  "dependencies": {
    "chevrotain": "^11.0.3",
    "nodemon": "^3.1.11"
  },
  "devDependencies": {
    "@babel/generator": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@babel/types": "^7.28.5",
    "best-highlight": "^0.3.0",
    "esbuild": "^0.27.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
